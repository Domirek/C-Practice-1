#include <stdio.h>
#include <stdbool.h>

int main() {
    int num;
    
    printf("Type a number: \n");
    scanf("%d", &num);
    
    printf("\n%d", num%2 == 0);
    printf("\n0 - not even number, 1 - even number");

    return 0;
}

/* Вывод1:
Type a number: 
3

0
0 - not even number, 1 - even number

Вывод2:
Type a number: 
4

1
0 - not even number, 1 - even number
*/
