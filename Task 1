#include <stdio.h>

int main() {
    float temperatureC;
    
    printf("Type a temperature in Celsius: \n");
    scanf("%f", &temperatureC);
    
    float temperatureF;
    temperatureF = (temperatureC*9/5) + 32.0;
    
    printf("\nC = %.0f ; F = %.2f", temperatureC, temperatureF);

    return 0;
}

//Вывод
/*Type a temperature in Celsius: 
20

C = 20 ; F = 68.00
*/
