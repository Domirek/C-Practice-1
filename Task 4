#include<stdio.h>
#include <stdbool.h>

int main() {
    int n;
    
    printf("Type a number:\n");
    scanf("%d", &n);
    
    printf("\nn = %d", n);
    
    int flag = (n > 0 && ( n & ( n - 1)) == 0);
    
    printf("\n%d", flag);
    
    return 0; 
}

/*
Вывод1:
Type a number:
1024

n = 1024
1

Вывод2:
Type a number:
10

n = 10
0
*/
